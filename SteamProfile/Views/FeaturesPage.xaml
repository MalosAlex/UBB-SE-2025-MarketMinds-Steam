                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="160" Height="160" Margin="8" Tapped="Grid_Tapped">
                            <!-- Border with conditional color -->
