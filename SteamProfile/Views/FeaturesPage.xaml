                                         Margin="5"/>
                                <TextBlock Text="{Binding DisplayValue}"
                                         HorizontalAlignment="Center"
                                         Margin="5"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

