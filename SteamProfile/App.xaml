<?xml version="1.0" encoding="utf-8"?>

<Application
    x:Class="SteamProfile.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile"
    xmlns:converters="using:SteamProfile.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->

            <!-- Converters -->
            <converters:StringLengthToVisibilityConverter x:Key="StringLengthToVisibilityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:StringFormatConverter x:Key="StringFormatConverter"/>
            <converters:BoolToGridColumnConverter x:Key="BoolToGridColumnConverter"/>
            <converters:BoolToNextGridColumnConverter x:Key="BoolToNextGridColumnConverter"/>
            <converters:BoolToLastGridColumnConverter x:Key="BoolToLastGridColumnConverter"/>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
            <converters:ImagePathToImageSourceConverter x:Key="ImagePathToImageSourceConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
