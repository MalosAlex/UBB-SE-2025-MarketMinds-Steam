<Page x:ConnectionId='1'
    x:Class="SteamProfile.Views.WalletViews.AddMoneyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views.WalletViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel Spacing="20">
            <TextBlock Text="Add Money to Wallet" Style="{StaticResource TitleTextBlockStyle}"/>

            <TextBox x:ConnectionId='2' x:Name="sumToBeAddedTextBox" 
                     Header="Amount to add (max 500):" 
                     PlaceholderText="Enter amount" 
                                                                       
                                                                  />

            <TextBlock x:ConnectionId='3' x:Name="InvalidInput_ErrorMessage" 
                       Text="Invalid input! Please enter a valid amount (1-500)." 
                       Foreground="Red"
                                                                                          />

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:ConnectionId='4' x:Name="UseCardButton" 
                        Content="Use Card" 
                                                 
                                                                                         />

                <Button x:ConnectionId='5' x:Name="UsePaypalButton" 
                        Content="Use PayPal" 
                                                   
                                                                                         />

                <Button x:ConnectionId='6' Content="Cancel"               />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

