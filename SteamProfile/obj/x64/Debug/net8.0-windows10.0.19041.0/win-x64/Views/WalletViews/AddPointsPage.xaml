<Page
    x:Class="SteamProfile.Views.WalletViews.AddPointsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel Padding="20" Spacing="15">
            <TextBlock Text="Select a Points Package" FontSize="26" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView x:ConnectionId='2' x:Name="PointsListView" ItemsSource="{Binding PointsOffers}" SelectionMode="None">
                <ListView.Header>
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                        <Grid VerticalAlignment="Center">
                            <TextBlock Text="Points" FontSize="20" FontWeight="Bold" Grid.Column="0"/>
                            <TextBlock Text="Price" FontSize="20" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center"/>
                            <TextBlock Text="" Grid.Column="2"/>
                        </Grid>
                    </Border>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate                               >
                        <Border x:ConnectionId='5' BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5" CornerRadius="8">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:ConnectionId='6'                        FontSize="18" FontWeight="Medium" Grid.Column="0" VerticalAlignment="Center"/>
                                <TextBlock x:ConnectionId='7'                       FontSize="18" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <Button x:ConnectionId='8' Content="Buy" Command="{Binding DataContext.PurchasePointsCommand, ElementName=PointsListView}" 
                                        Grid.Column="2" Margin="5" Padding="8" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:ConnectionId='3' Content="Cancel"                         HorizontalAlignment="Center" Padding="12,6" Margin="15" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>

