<Page x:ConnectionId='1'
    x:Class="SteamProfile.Views.WalletViews.CardPaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views.WalletViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel Spacing="20">
            <TextBlock Text="Card Payment" Style="{StaticResource TitleTextBlockStyle}"/>

            <TextBlock x:ConnectionId='2' x:Name="AmountTextBlock" 
                                                                         
                       Style="{StaticResource SubtitleTextBlockStyle}"/>

            <TextBox x:ConnectionId='3' x:Name="OwnerNameTextBox" 
                     Header="Card Owner Name:" 
                     PlaceholderText="First and Last Name"
                                            />

            <TextBox x:ConnectionId='4' x:Name="CardNumberTextBox" 
                     Header="Card Number:" 
                     PlaceholderText="16-digit card number"
                     MaxLength="16"
                                              />

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:ConnectionId='9' x:Name="ExpirationDateTextBox" 
                         Grid.Column="0"
                         Header="Expiration Date (MM/YY):" 
                         PlaceholderText="MM/YY"
                         MaxLength="5"
                                                />

                <TextBox x:ConnectionId='10' x:Name="CVVTextBox" 
                         Grid.Column="1"
                         Header="CVV:" 
                         PlaceholderText="3-digit code"
                         MaxLength="3"
                                               />
            </Grid>

            <TextBlock x:ConnectionId='5' x:Name="ErrorMessage" 
                       Text="Please ensure all payment details are valid." 
                       Foreground="Red"
                                                                                          />

            <TextBlock x:ConnectionId='6' x:Name="SuccessfullPayment" 
                                                                           
                       Foreground="Green"
                                                                                           />

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:ConnectionId='7' Content="Add Money" 
                                                 
                        />

                <Button x:ConnectionId='8' Content="Cancel" 
                                             />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

