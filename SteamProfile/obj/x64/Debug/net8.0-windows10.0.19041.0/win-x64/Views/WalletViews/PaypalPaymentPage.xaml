<Page x:ConnectionId='1'
    x:Class="SteamProfile.Views.WalletViews.PaypalPaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views.WalletViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel Spacing="12">
            <TextBlock x:ConnectionId='2' x:Name="AmountTextBlock" 
                                                                         
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBox x:ConnectionId='3' x:Name="EmailTextBox" 
                     Header="PayPal Email" 
                     PlaceholderText="Enter your PayPal email" 
                                                                 
                                                           />

            <PasswordBox x:ConnectionId='4' x:Name="PasswordText" 
                         Header="PayPal Password" 
                         PlaceholderText="Enter your PayPal password"
                                                                       />

            <TextBlock x:ConnectionId='5' x:Name="ErrorMessage" 
                       Text="Invalid email or password" 
                       Foreground="Red"
                                                                                           />

            <TextBlock x:ConnectionId='6' x:Name="SuccessfulPayment" 
                                                                            
                       Foreground="Green"
                                                                                            />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,20,0,0">
                <Button x:ConnectionId='7' x:Name="AddMoneyButton" Content="Add Money"                              />
                <Button x:ConnectionId='8' x:Name="CancelButton" Content="Cancel"                            />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

