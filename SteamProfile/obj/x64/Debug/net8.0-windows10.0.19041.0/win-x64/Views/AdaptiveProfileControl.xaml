<UserControl x:ConnectionId='1'
    x:Class="SteamProfile.Views.AdaptiveProfileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="RootGrid">
        <!-- Background (if equipped) -->
        <Image x:ConnectionId='3' x:Name="BackgroundImage" 
               Stretch="UniformToFill"
               Opacity="0.7"
               Visibility="Collapsed"/>
            
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Profile Picture Section -->
            <Grid x:ConnectionId='4' Grid.Row="0" 
                  x:Name="ProfileSection"
                  HorizontalAlignment="Center"
                  Margin="10">
                
                <!-- Frame (if equipped) -->
                <Image x:ConnectionId='9' x:Name="FrameImage" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>

                <!-- Profile picture, hat, and pet container -->
                <Grid x:ConnectionId='10' x:Name="ProfilePictureContainer">
                    <!-- Profile Picture -->
                    <Ellipse x:ConnectionId='11' x:Name="ProfilePictureEllipse"
                                                                            
                                                                             >
                        <Ellipse.Fill>
                            <ImageBrush x:ConnectionId='14' x:Name="ProfilePictureBrush" 
                                       Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    
                    <!-- Hat positioned at the top - only show if source is not empty/transparent -->
                    <Image x:ConnectionId='12' x:Name="HatImage" 
                                                                
                                                                 
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"
                           Margin="0,-20,0,0"
                           Visibility="Collapsed"/>
                    
                    <!-- Pet positioned at bottom right - matching the original layout -->
                    <Image x:ConnectionId='13' x:Name="PetImage" 
                                                                
                                                                 
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           Margin="0,0,-30,-30"
                           Visibility="Collapsed"/>
                </Grid>
            </Grid>

            <!-- Info Section -->
            <StackPanel x:ConnectionId='5' Grid.Row="1" 
                        x:Name="InfoSection"
                        HorizontalAlignment="Center"
                        Margin="10,0,10,10">
                
                <!-- Username with Emoji -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Spacing="5">
                    <TextBlock x:ConnectionId='7' x:Name="UsernameTextBlock"
                             FontSize="20"
                             FontWeight="SemiBold"/>
                    <Image x:ConnectionId='8' x:Name="EmojiImage" 
                           Height="24" 
                           Width="24"
                           Visibility="Collapsed"/>
                </StackPanel>

                <!-- Description - more compact with smaller text -->
                <TextBlock x:ConnectionId='6' x:Name="DescriptionTextBlock"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          FontSize="12"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 

