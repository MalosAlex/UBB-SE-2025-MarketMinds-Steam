<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="SteamProfile.Views.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Forgot Password" 
                       Style="{ThemeResource HeaderTextBlockStyle}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
            
            <!-- Email Input Section -->
            <StackPanel x:ConnectionId='2' x:Name="EmailSection"                                                               >
                <TextBox x:ConnectionId='12' x:Name="EmailTextBox" 
                         PlaceholderText="Enter your email"
                                                                      
                         Margin="0,0,0,10"/>
                
                <Button x:ConnectionId='13' Content="Send Reset Code" 
                                                                          
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,10"/>
                
                <!-- Go back to login button on email screen -->
                <Button x:ConnectionId='14' Content="Back to Login" 
                                                 
                        Style="{ThemeResource TextBlockButtonStyle}"
                        HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Code Verification Section -->
            <StackPanel x:ConnectionId='3' x:Name="CodeSection"                                                              >
                <TextBox x:ConnectionId='10' x:Name="CodeTextBox" 
                         PlaceholderText="Enter reset code"
                                                                          
                         Margin="0,0,0,10"/>
                
                <Button x:ConnectionId='11' Content="Verify Code" 
                                                                       
                        HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- New Password Section -->
            <StackPanel x:ConnectionId='4' x:Name="PasswordSection"                                                                  >
                <PasswordBox x:ConnectionId='6' x:Name="NewPasswordBox" 
                            PlaceholderText="Enter new password"
                                                                                   
                            Margin="0,0,0,10"/>
                
                <PasswordBox x:ConnectionId='7' x:Name="ConfirmPasswordBox" 
                            PlaceholderText="Confirm new password"
                                                                                       
                            Margin="0,0,0,10"/>
                
                <Button x:ConnectionId='8' Content="Reset Password" 
                                                                          
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,10"/>
                
                <!-- Go to Login button with direct event handler -->
                <Button x:ConnectionId='9' x:Name="GoToLoginButton" 
                        Content="Go to Login" 
                                               
                        HorizontalAlignment="Stretch"
                        Style="{ThemeResource AccentButtonStyle}"
                        Visibility="Collapsed"/>
            </StackPanel>

            <TextBlock x:ConnectionId='5'                                                      
                                                                                
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>

