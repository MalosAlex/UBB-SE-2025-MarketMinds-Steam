<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="SteamProfile.Views.ConfigurationsView.AccountSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views.ConfigurationsView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Width="400" Spacing="15">
            <TextBlock Text="Account Settings" FontSize="30" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Success Message -->
            <TextBlock x:ConnectionId='2'                                                       
                       Foreground="Green" 
                                                                                            
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold"/>

            <!-- Username Section -->
            <TextBlock Text="Modify Username" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:ConnectionId='14' Width="250" PlaceholderText="New username"
                                                                                                             />
                <Button x:ConnectionId='15' Content="Update" Width="100" 
                                                                          
                                                                                         />
            </StackPanel>
            <TextBlock x:ConnectionId='3' Text="Username must be unique" 
                       Foreground="Red" 
                                                                                                  />

            <!-- Email Section -->
            <TextBlock Text="Modify Email" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:ConnectionId='12' Width="250" PlaceholderText="New email"
                                                                                                          />
                <Button x:ConnectionId='13' Content="Update" Width="100" 
                                                                       
                                                                                      />
            </StackPanel>
            <TextBlock x:ConnectionId='4' Text="Please enter a valid email address" 
                       Foreground="Red" 
                                                                                               />

            <!-- Password Section -->
            <TextBlock Text="Modify Password" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <PasswordBox x:ConnectionId='10' Width="250" PlaceholderText="New password"
                                                                                                                     />
                <Button x:ConnectionId='11' Content="Update" Width="100" 
                                                                          
                                                                                         />
            </StackPanel>
            <TextBlock x:ConnectionId='5' Text="Password must be at least 8 characters, include uppercase, lowercase, and special characters" 
                       TextWrapping="Wrap"
                       Foreground="Red" 
                                                                                                  />

            <!-- Error Message -->
            <TextBlock x:ConnectionId='6'                                                     
                       Foreground="Red" 
                                                                                                                                              
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="20" Margin="0,30,0,0">
                <Button x:ConnectionId='7' Content="Delete Account" Width="200" Height="40" 
                        Background="#E53935" Foreground="White"
                                                                         />
                <Button x:ConnectionId='8' Content="Log out" Width="200" Height="40"
                                                                  />
                <Button x:ConnectionId='9' Content="Go Back"                Width="200"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

